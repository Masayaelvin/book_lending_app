<h2>Sign Up</h2>

<%= form_with model: @user, url: users_path, method: :post do |f| %>
  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit "Sign Up" %>
  </p>
<% end %>

<%= link_to "Already have an account? Log in", login_path %>
