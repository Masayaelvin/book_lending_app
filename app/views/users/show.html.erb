<h1 class="text-center text-info">My Borrowed Books</h1>

<% if @borrowed_books.empty? %>
  <p class="text-center text-muted">You haven't borrowed any books yet.</p>
<% else %>
  <table class="table table-striped mt-4">
    <thead>
      <tr>z
        <th>Title</th>
        <th>Author</th>
        <th>Due Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @borrowed_books.each do |borrowing| %>
        <tr>
          <td><%= borrowing.book.title %></td>
          <td><%= borrowing.book.author %></td>
          <td><%= borrowing.due_date.strftime("%B %d, %Y") %></td>
          <td>
            <%= button_to "Return", borrowing_path(borrowing), method: :delete, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

