<div class="container mt-4">
  <h1 class="text-center text-primary">Available Books</h1>

  <div class="row mt-3">
    <% @books.each do |book| %>
      <div class="col-md-4">
        <!-- Clickable Card -->
        <a href="<%= book_path(book) %>" class="book-card-link">
          <div class="book-card <%= book.available? ? 'available' : 'borrowed' %>">
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-author">By <strong><%= book.author %></strong></p>
              <p class="card-status"><%= book.available? ? "Available" : "Borrowed" %></p>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>