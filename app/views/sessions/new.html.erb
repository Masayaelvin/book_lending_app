<div class="form-container mt-5">
  <h2 class="text-center">Login</h2>
  
  <%= form_with url: session_path, method: :post, class: "mt-3" do |form| %>
    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <%= form.submit "Login", class: "btn btn-primary w-100" %>
  <% end %>

  <div class="text-center mt-3">
    <%= link_to "Forgot password?", new_password_path, class: "text-muted" %> |
    <%= link_to "Create an account", register_path, class: "text-primary" %>
  </div>
</div>
